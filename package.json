{
  "name": "reactive-trello",
  "version": "1.0.0",
  "description": "Boilerplate project for building apps with MERN stack",
  "private": true,
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "webpack-dev-server --open --config ./client/config/webpack.config.dev.js",
    "dev": "concurrently -k \"npm run server\" \"npm run client\" ",
    "build": "webpack --config ./client/config/webpack.config.prod.js --progress",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "engines": {
    "node": "8.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IgorAntonov/MERN-Boilerplate.git"
  },
  "keywords": [],
  "author": "Igor Antonov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/IgorAntonov/MERN-Boilerplate/issues"
  },
  "homepage": "https://github.com/IgorAntonov/MERN-Boilerplate#readme",
  "devDependencies": {
    "autoprefixer": "^8.3.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-import-resolver-webpack": "^0.10.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.3",
    "mini-css-extract-plugin": "^0.4.0",
    "moxios": "^0.4.0",
    "nodemon": "^1.17.3",
    "postcss-loader": "^2.1.4",
    "react-test-renderer": "^16.3.2",
    "redux-mock-store": "^1.5.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "autosize": "^4.0.2",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cookie-session": "^2.0.0-beta.3",
    "core-js": "^2.5.5",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "formik": "^0.11.11",
    "mongoose": "^5.0.17",
    "normalize.css": "^8.0.0",
    "normalizr": "^3.2.4",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "passport-local": "^1.0.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-beautiful-dnd": "^7.1.3",
    "react-click-outside": "github:tj/react-click-outside",
    "react-dom": "^16.3.2",
    "react-hot-loader": "^4.1.2",
    "react-portal": "^4.1.5",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-timeago": "^4.1.9",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "reselect": "^3.0.1",
    "styled-components": "^3.2.6",
    "yup": "^0.25.1"
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/client/config/configureEnzymeAdapter.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "\\.(jpg|jpeg|png|gif)$": "<rootDir>/client/config/fileMock.js"
    },
    "moduleNameMapper": {
      "^Config(.*)$": "<rootDir>/client/config$1",
      "^Components(.*)$": "<rootDir>/client/src/components$1",
      "^Src(.*)$": "<rootDir>/client/src$1"
    }
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel",
      "transform-class-properties",
      "transform-object-rest-spread",
      "babel-plugin-styled-components"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "react"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./client/config/webpack.config.dev.js"
        }
      }
    },
    "rules": {
      "import/prefer-default-export": "off",
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "jsx-a11y/anchor-is-valid": [
        "error",
        {
          "components": [
            "Link"
          ],
          "specialLink": [
            "to",
            "hrefLeft",
            "hrefRight"
          ],
          "aspects": [
            "noHref",
            "invalidHref",
            "preferButton"
          ]
        }
      ],
      "linebreak-style": 0,
      "no-console": "off",
      "no-confusing-arrow": [
        "error",
        {
          "allowParens": true
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ],
      "comma-dangle": 0,
      "arrow-parens": 0
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourseType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "jest": true,
      "node": true
    }
  }
}
